#!/bin/bash
SEL_DIR='temp/sv-selenium'

CHROMEDRIVER_LINUX_URL='https://chromedriver.googlecode.com/files/chromedriver_linux32_2.2.zip'
CHROMEDRIVER_MAC_URL='https://chromedriver.googlecode.com/files/chromedriver_mac32_2.2.zip'

unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
   CHROMEDRIVER_URL=$CHROMEDRIVER_LINUX_URL
else
   CHROMEDRIVER_URL=$CHROMEDRIVER_MAC_URL
fi

mkdir -p $SEL_DIR
rm -rf $SEL_DIR/chromedriver*
cd $SEL_DIR

wget $CHROMEDRIVER_URL
unzip chromedriver*.zip
rm chromedriver*.zip

