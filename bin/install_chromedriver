#!/bin/bash
SEL_DIR='/tmp/sv-selenium'
CHROMEDRIVER_LINUX_URL='http://chromedriver.storage.googleapis.com/2.8/chromedriver_linux32.zip'
CHROMEDRIVER_MAC_URL='http://chromedriver.storage.googleapis.com/2.8/chromedriver_mac32.zip'

unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
   CHROMEDRIVER_URL=$CHROMEDRIVER_LINUX_URL
else
   CHROMEDRIVER_URL=$CHROMEDRIVER_MAC_URL
fi

mkdir -p $SEL_DIR
rm -rf $SEL_DIR/chromedriver*
cd $SEL_DIR

wget $CHROMEDRIVER_URL
unzip chromedriver*.zip
rm chromedriver*.zip

